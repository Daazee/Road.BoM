</head>
<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <img src="~/assets/img/logo.png" alt="">
            <span class="d-none d-lg-block">Bill of Measurements</span>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->



        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <!--<li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li>-->
                <!-- End Search Icon-->

                <li class="nav-item dropdown pe-3">

                    <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Index","Home")">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Sign Out</span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="#">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Sign Out</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            @*<li class="nav-heading">Pages</li>*@

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("AllRoads","Road")">
                    <i class="bi bi-file-earmark"></i>
                    <span>Road</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#icons-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-gem"></i><span>Settings</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="icons-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="@Url.Action("BillCategories","Setting")">
                            <i class="bi bi-circle"></i><span>Bill Categories</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("BillItems","Setting")">
                            <i class="bi bi-circle"></i><span>Bill Item</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("BillItemRates","Setting")">
                            <i class="bi bi-circle"></i><span>Bill Item Rate</span>
                        </a>
                    </li>
                </ul>
            </li><!-- End Settings Nav -->

        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">
        @RenderBody()
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="credits">
            Designed by Sydel
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <!-- Vendor JS Files -->
    @* <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script> Disable due to sliwness reported on *@
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/vendor/quill/quill.min.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Datatables Js Files-->
    <script src="~/lib/datatables/dist/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/dist/js/datatables-bootstrap5.js"></script>
    <script src="~/lib/datatables/dist/js/datatables.responsive.js"></script>
    <script src="~/lib/datatables/dist/js/responsive.bootstrap5.js"></script>
    <script src="~/lib/datatables/dist/js/datatables-buttons.js"></script>
    <script src="~/lib/datatables/dist/js/buttons.bootstrap5.js"></script>
    @*<script src="~/lib/datatables/dist/js/jszip.js"></script>
    <script src="~/lib/datatables/dist/js/buttons.html5.js"></script>
    <script src="~/lib/datatables/dist/js/buttons.print.js"></script>
    <script src="~/lib/datatables/dist/js/dataTables.checkboxes.min.js"></script> *@
